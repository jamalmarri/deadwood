<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Deadwood">
    <Pane>
        <HBox>
            <Pane>
                <ImageView pickOnBounds="true" preserveRatio="true">
                    <Image url="@img/board.jpg" />
                </ImageView>
                <Pane fx:id="cardsPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1200.0" />
            <Pane fx:id="takesPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1200.0" />
            <Pane fx:id="playersPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1200.0" />
            </Pane>
            <VBox style="-fx-background-color: #b17246;">
                <VBox>
                    <VBox.margin>
                        <Insets bottom="250.0" />
                    </VBox.margin>
                    <Label fx:id="playerLabel" prefWidth="143.0" text="Player ">
                        <font>
                            <Font name="FreeSans" size="40.0" />
                        </font>
                    </Label>
                    <Label fx:id="dollarsLabel" prefWidth="143.0" text="Dollars: ">
                        <font>
                            <Font name="FreeSans" size="24.0" />
                        </font>
                    </Label>
                    <Label fx:id="creditsLabel" prefWidth="143.0" text="Credits: ">
                        <font>
                            <Font name="FreeSans" size="24.0" />
                        </font>
                    </Label>
               <Label fx:id="rehearsalsLabel" layoutX="10.0" layoutY="83.0" prefWidth="143.0" text="Rehearsals: ">
                  <font>
                     <Font name="FreeSans" size="23.0" />
                  </font>
               </Label>
                </VBox>
                <VBox>
                    <VBox.margin>
                        <Insets bottom="100.0" />
                    </VBox.margin>
                    <MenuButton fx:id="moveMenu" mnemonicParsing="false" popupSide="RIGHT" prefWidth="143.0" text="Move">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </MenuButton>
                    <MenuButton fx:id="takeMenu" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" popupSide="RIGHT" prefWidth="143.0" text="Take Role">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </MenuButton>
                    <Button fx:id="rehearseButton" mnemonicParsing="false" onAction="#rehearse" prefWidth="143.0" text="Rehearse">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </Button>
                    <Button fx:id="actButton" mnemonicParsing="false" onAction="#act" prefWidth="143.0" text="Act">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </Button>
                    <MenuButton fx:id="upgradeMenu" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" popupSide="RIGHT" prefWidth="143.0" text="Upgrade">
                        <font>
                            <Font size="17.0" />
                        </font>
                    </MenuButton>
                    <Button mnemonicParsing="false" onAction="#end" prefWidth="143.0" text="End Turn">
                        <VBox.margin>
                            <Insets />
                        </VBox.margin>
                        <font>
                            <Font size="17.0" />
                        </font>
                    </Button>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <padding>
                  <Insets right="10.0" />
               </padding>
                </VBox>
                <HBox prefWidth="143.0">
                    <VBox>
                        <ImageView fx:id="dice1" pickOnBounds="true" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="5.0" left="3.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </ImageView>
                        <ImageView fx:id="dice4" pickOnBounds="true" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="5.0" left="3.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </ImageView>
                    </VBox>
                    <VBox>
                        <ImageView fx:id="dice2" pickOnBounds="true" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </ImageView>
                        <ImageView fx:id="dice5" pickOnBounds="true" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                            </VBox.margin>
                        </ImageView>
                    </VBox>
                    <VBox>
                        <ImageView fx:id="dice3" pickOnBounds="true" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                            </VBox.margin>
                        </ImageView>
                        <ImageView fx:id="dice6" pickOnBounds="true" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="5.0" left="5.0" right="10.0" top="5.0" />
                            </VBox.margin>
                        </ImageView>
                    </VBox>
               <VBox.margin>
                  <Insets bottom="75.0" />
               </VBox.margin>
                </HBox>
                <Label fx:id="dayLabel" prefWidth="143.0" text="Day ">
                    <font>
                        <Font name="FreeSans" size="56.0" />
                    </font>
                    <VBox.margin>
                        <Insets />
                    </VBox.margin>
                </Label>
            </VBox>
        </HBox>
    </Pane>
</Scene>
